{% extends 'base.html.twig' %}
{% block page_title %}
  <h1>Factor de Riesgo | Editar</h1>
{% endblock %}
{% block body %}
  {{ form_start(edit_form,{'attr':{
      'class' : 'form-horizontal'
      } }) }}
  {{ form_errors(edit_form) }}
  <div class="panel-body">
    <div class="form-group">
      {{ form_label(edit_form.nombre, "Nombre", {'label_attr' : {
          'class' : 'col-sm-3 control-label'
          } }) }}
      <div class="col-sm-6">
        {{ form_widget(edit_form.nombre, {'attr':{
          'class' : 'form-control input-sm'
          } }) }}
      </div>
    </div>
    <div class="form-group">
      {{ form_label(edit_form.descripcion, "Descripcion", {'label_attr' : {
          'class' : 'col-sm-3 control-label'
          } }) }}
      <div class="col-sm-6">
        {{ form_widget(edit_form.descripcion, {'attr':{
          'class' : 'form-control input-sm'
          } }) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_label(edit_form.enable, "Enable", {'label_attr' : {
          'class' : 'col-sm-3 control-label'
          } }) }}
      <div class="col-sm-6">
        {{ form_widget(edit_form.enable, {'attr':{
          'class' : 'form-control input-sm',
          'data-switchery' : 'true',
          'style' : "display: none;"
          } }) }}
      </div>
    </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-3">
        <button class="btn btn-info" type="submit">Guardar</button>
        <a href="{{ path('factor-riesgo_index') }}">
          <button class="btn btn-warning" type="button">Volver a la lista</button>
        </a>
      </div>
    </div>
  </div>
  {{ form_end(edit_form) }}
  <!-- <input type="submit" value="Edit"/> -->
  <div class="panel-footer">
    <div class="row">
      <hr>
      <div class="col-sm-9 col-sm-offset-3">
        {{ form_start(delete_form) }}
        <button class="btn btn-danger" type="submit">Eliminar</button>
        {{ form_end(delete_form) }}
      </div>
    </div>
  </div>
{% endblock %}

{% block script_region %}
  <script type="text/javascript">
    new Switchery(document.getElementById('factor_riesgo_enable'), {size: 'large'});
  </script>
{% endblock %}
