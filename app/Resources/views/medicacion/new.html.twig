{% extends 'base.html.twig' %}
{% block page_title %}
  <h1>Medicacion | Nuevo
{% endblock %}
{% block body %}
  {{ form_start(form,{'attr':{
  'class' : 'form-horizontal'
  } }) }}
  {{ form_errors(form) }}
  <div class="panel-body">
    <div class="form-group">
      {{ form_label(form.nombre, "Nombre", {'label_attr' : {
      'class' : 'col-sm-3 control-label'
      } }) }}
      <div class="col-sm-6">
        {{ form_widget(form.nombre, {'attr':{
      'class' : 'form-control input-sm'
      } }) }}
      </div>
    </div>
    <div class="form-group">
      {{ form_label(form.descripcion, "Descripcion", {'label_attr' : {
      'class' : 'col-sm-3 control-label'
      } }) }}
      <div class="col-sm-6">
        {{ form_widget(form.descripcion, {'attr':{
      'class' : 'form-control input-sm'
      } }) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_label(form.enable, "Enable", {'label_attr' : {
      'class' : 'col-sm-3 control-label'
      } }) }}
      <div class="col-sm-6">
        {{ form_widget(form.enable, {'attr':{
      'class' : 'form-control input-sm',
      'data-switchery' : 'true',
      'style' : "display: none;"
      } }) }}
      </div>
    </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-3">
        <button class="btn btn-info" type="submit">Crear</button>
        <a href="{{ path('medicacion_index') }}">
          <button class="btn btn-warning" type="button">Volver a la lista</button>
        </a>
      </div>
      <div class="col-sm-9 col-sm-offset-3"></div>
    </div>
  </div>
  <!-- <input type="submit" value="Edit"/> -->
  {{ form_end(form) }}
{% endblock %}

{% block script_region %}
<script type="text/javascript">
new Switchery(document.getElementById('medicacion_enable'), { size: 'large' });

</script>
{% endblock %}
