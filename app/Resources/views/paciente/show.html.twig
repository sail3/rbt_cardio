{% extends 'base.html.twig' %}
{% block page_title %}
  <h1>Paciente | Detalle</h1>
{% endblock %}
{% block body %}
  <div class="col-lg-6">
    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">Detalle</h3>
      </div>

      <div class="panel-body">
        <table class="table table-hover table-vcenter">
          <tbody>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Idpaciente</span>
              </td>
              <td class="text-center">
                <span class="text">{{ paciente.id }}</span>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Historia</span>
              </td>
              <td class="text-center">
                <span class="text">{{ paciente.historia }}</span>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Dni</span>
              </td>
              <td class="text-center">
                <span class="text">{{ paciente.dni }}</span>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Nombre</span>
              </td>
              <td class="text-center">
                <span class="text">{{ paciente.nombre }}</span>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Paterno</span>
              </td>
              <td class="text-center">
                <span class="text">{{ paciente.paterno }}</span>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Materno</span>
              </td>
              <td class="text-center">
                <span class="text">{{ paciente.materno }}</span>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Genero</span>
              </td>
              <td class="text-center">
                <span class="text">{{ paciente.genero }}</span>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Fechanacimiento</span>
              </td>
              <td class="text-center">
                <span class="text">
                  {% if paciente.fechaNacimiento %}{{ paciente.fechaNacimiento|date('Y-m-d') }}{% endif %}
                </span>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Telefono</span>
              </td>
              <td class="text-center">
                <span class="text">{{ paciente.telefono }}</span>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Activo</span>
              </td>
              <td class="text-center">
                <span class="text">
                  {% if paciente.activo %}Yes{% else %}No{% endif %}
                </span>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Fecharegistro</span>
              </td>
              <td class="text-center">
                <span class="text">
                  {% if paciente.fechaRegistro %}{{ paciente.fechaRegistro|date('Y-m-d') }}{% endif %}
                </span>
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Ocupacion</span>
              </td>
              <td class="text-center">
                <span class="text">{{ paciente.ocupacion }}</span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-sm-9 col-sm-offset-3">
            <a href="{{ path('paciente_edit', {'id': paciente.id }) }}">
              <button class="btn btn-info" type="submit">Editar</button>
            </a>
            <a href="{{ path('paciente_index') }}">
              <button class="btn btn-warning" type="button">Volver</button>
            </a>
            <!-- {{ form_start(delete_form) }}
          <button class="btn btn-danger" type="submit">Eliminar</button>
          {{ form_end(delete_form) }} -->
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">Historia Clinica | 
        <a href="{{ path('historia-clinica_edit', { 'id': historiaClinica.idpaciente.id }) }}">
          <button class="btn btn-info" type="button">Editar historia Clinica</button>
        </a>
        </h3>
      </div>
      <table class="table table-hover table-vcenter">
        <tbody>
          <tr>
            <td class="text-center">
              <span>
                <i class="fa fa-plus fa-lg"></i>
              </span>
            </td>
            <td>
              <span class="text-semibold">Transfusionsanguinea</span>
            </td>
            <td class="text-center">
              <span class="text">
                {% if historiaClinica.transfusionSanguinea %}Yes{% else %}No{% endif %}
              </span>
            </td>
          </tr>
          <tr>
            <td class="text-center">
              <span>
                <i class="fa fa-plus fa-lg"></i>
              </span>
            </td>
            <td>
              <span class="text-semibold">Asistecontroles</span>
            </td>
            <td class="text-center">
              <span class="text">
                {% if historiaClinica.asisteControles %}Yes{% else %}No{% endif %}
              </span>
            </td>
          </tr>
          <tr>
            <td class="text-center">
              <span>
                <i class="fa fa-plus fa-lg"></i>
              </span>
            </td>
            <td>
              <span class="text-semibold">Nrohospitalizaciones</span>
            </td>
            <td class="text-center">
              <span class="text">
                {{ historiaClinica.nroHospitalizaciones }}
              </span>
            </td>
          </tr>
          <tr>
            <td class="text-center">
              <span>
                <i class="fa fa-plus fa-lg"></i>
              </span>
            </td>
            <td>
              <span class="text-semibold">Peso</span>
            </td>
            <td class="text-center">
              <span class="text">
                {{ historiaClinica.peso }}
              </span>
            </td>
          </tr>
          <tr>
            <td class="text-center">
              <span>
                <i class="fa fa-plus fa-lg"></i>
              </span>
            </td>
            <td>
              <span class="text-semibold">Talla</span>
            </td>
            <td class="text-center">
              <span class="text">
                {{ historiaClinica.talla }}
              </span>
            </td>
          </tr>
          <tr>
            <td class="text-center">
              <span>
                <i class="fa fa-plus fa-lg"></i>
              </span>
            </td>
            <td>
              <span class="text-semibold">TFG</span>
            </td>
            <td class="text-center">
              <span class="text">
                {{ historiaClinica.tfg }}
              </span>
            </td>
          </tr>
        </tbody>
      </table>

      <div class="panel-heading">
        <h3 class="panel-title">Fichas |
          <a href="{{ path('ficha_new', {'idpaciente': historiaClinica.getIdpaciente.getId }) }}">
            <button class="btn btn-success" type="button">Nueva Ficha</button>
          </a>
        </h3>
      </div>
      <table class="table table-hover table-vcenter">
        <thead>
          <tr>
            <th>Motivo de Hospitalizacion</th>
            <th>Fechaingreso</th>
            <th>Alta</th>
            <th>Anotaciones</th>
          </tr>
        </thead>
        <tbody>
          {% for ficha in fichas %}
            <tr>
              <td>
              <a href="{{ path('ficha_edit', { 'id': ficha.id }) }}">
              {{ ficha.motivoHospitalizacion }}
              </a>
              </td>
              <td>
                {% if ficha.fechaIngreso %}{{ ficha.fechaIngreso|date('Y-m-d') }}{% endif %}
              </td>
              <td>
                <span class="text-semibold">
                  {{ ficha.altaMotivo }}
                </span><br>
                <small class="text-muted">
                  {% if ficha.altaFecha %}{{ ficha.altaFecha|date('Y-m-d') }}{% endif %}
                </small><br>
                <span class="text-semibold">
                  {{ ficha.altaDescripcion }}

                </span>
              </td>
              <td>{{ ficha.anotaciones }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
