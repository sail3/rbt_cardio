{% extends 'base.html.twig' %}
{% block page_title %}
  <h1>Usuario | Detalle</h1>
{% endblock %}
{% block body %}

  <div class="col-lg-6">
    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">Detalle</h3>
      </div>

      <div class="panel-body">
        <table class="table table-hover table-vcenter">
          <tbody>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Idusuario</span></td>
              <td>{{ usuario.id }}</td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Nombre</span>
                </td>
              <td>{{ usuario.nombre }}</td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Apellido</span>
                </td>
              <td>{{ usuario.apellido }}</td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Email</span>
              </td>
              <td>{{ usuario.email }}</td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Direccion</span>
              </td>
              <td>{{ usuario.direccion }}</td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Dni</span>
              </td>
              <td>{{ usuario.dni }}</td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Fecharegistro</span>
              </td>
              <td>
                {% if usuario.fechaRegistro %}{{ usuario.fechaRegistro|date('Y-m-d') }}{% endif %}
              </td>
            </tr>
            <tr>
              <td class="text-center">
                <span>
                  <i class="fa fa-plus fa-lg"></i>
                </span>
              </td>
              <td>
                <span class="text-semibold">Enable</span>
              </td>
              <td>
                {% if usuario.enable %}
                <span class="btn btn-success fileinput-button dz-clickable">
                  <span>Habilitado</span>
                </span>
                {% else %}
                <span class="btn btn-danger fileinput-button dz-clickable">
                  <span>Deshabilitado</span>
                </span>
                {% endif %}
              </td>
            </tr>
          </tbody>
        </table>

        <div class="panel-footer">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <a href="{{ path('user_edit', {'id': usuario.id }) }}">
                <button class="btn btn-info" type="submit">Editar</button>
              </a>
              <a href="{{ path('user_index') }}">
                <button class="btn btn-warning" type="button">Volver</button>
              </a>
              <!-- {{ form_start(delete_form) }}
            <button class="btn btn-danger" type="submit">Eliminar</button>
            {{ form_end(delete_form) }} -->
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  {% endblock %}
