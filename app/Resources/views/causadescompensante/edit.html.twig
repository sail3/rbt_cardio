{% extends 'base.html.twig' %}

{% block page_title %}
  CausaDescompensante edit
{% endblock %}

{% block body %}
<div class="col-lg-6">
  <div class="panel">
  {{ form_start(edit_form,{'attr':{
  'class' : 'form-horizontal'
  } }) }}
  {{ form_errors(edit_form) }}
  <div class="panel-body">
    <div class="form-group">
      {{ form_label(edit_form.nombre, "Nombre", {'label_attr' : {
      'class' : 'col-sm-3 control-label'
      } }) }}
      <div class="col-sm-6">
        {{ form_widget(edit_form.nombre, {'attr':{
      'class' : 'form-control input-sm'
      } }) }}
      </div>
    </div>
    <div class="form-group">
      {{ form_label(edit_form.descripcion, "Descripcion", {'label_attr' : {
      'class' : 'col-sm-3 control-label'
      } }) }}
      <div class="col-sm-6">
        {{ form_widget(edit_form.descripcion, {'attr':{
      'class' : 'form-control input-sm'
      } }) }}
      </div>
    </div>
    <div class="form-group">
      {{ form_label(edit_form.idficha, "Ficha", {'label_attr' : {
      'class' : 'col-sm-3 control-label'
      } }) }}
      <div class="col-sm-6">
        {{ form_widget(edit_form.idficha, {'attr':{
      'class' : 'form-control input-sm'
      } }) }}
      </div>
    </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-3">
        <button class="btn btn-info" type="submit">Guardar</button>
        <a href="{{ path('causa_index') }}">
        <button class="btn btn-warning" type="button">Volver</button>
        {{ form_start(delete_form) }}
        <button class="btn btn-danger" type="submit">Eliminar</button>
        <!-- <input type="submit" value="Delete"> -->
        {{ form_end(delete_form) }}
        </a>
      </div>
    </div>
  </div>
  <!-- <input type="submit" value="Edit"/> -->
  {{ form_end(edit_form) }}
</div>
</div>
{% endblock %}
