  </div>
  <div class="form-group">
    {{ form_label(edit_form.enable, "Habilitado", {'label_attr' : {
              'class' : 'col-sm-3 control-label'
              } }) }}
    <div class="col-sm-6">
      {{ form_widget(edit_form.enable, {'attr':{
    'class' : 'form-control input-sm',
    'data-switchery' : 'true',
    'style' : "display: none;"
    } }) }}
    </div>
  </div>

</div>
<div class="panel-footer">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-3">
      <button class="btn btn-info" type="submit">Guardar</button>
      <a href="{{ path('user_index') }}">
        <button class="btn btn-warning" type="button">Volver a la lista</button>
      </a>
    </div>
  </div>
</div>

{{ form_end(edit_form) }}
{% endblock %}

{% block script_region %}
<script type="text/javascript">
new Switchery(document.getElementById('usuario_enable'), { size: 'large' });

</script>
