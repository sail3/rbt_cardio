    {{ form_label(edit_form.dni, "DNI", {'label_attr' : {
              'class' : 'col-sm-3 control-label'
              } }) }}
    <div class="col-sm-6">
      {{ form_widget(edit_form.dni, {'attr':{
              'class' : 'form-control input-sm'
              } }) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_label(edit_form.fechaRegistro, "Fecha Registro", {'label_attr' : {
              'class' : 'col-sm-3 control-label'
